@page
@model cw6.Pages.AddMovie
<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Dodawanie Filmu</title>
</head>
<body>
<h1>Dodaj nowy film</h1>
<form asp-page="AddMovie">
    <div class="row m-3">
        <label class="col-1" asp-for="@Model.MyMovie.Title"></label>
        <input class="col-6" asp-for="@Model.MyMovie.Title">
        <span asp-validation-for="@Model.MyMovie.Title" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <label class="col-1" asp-for="@Model.MyMovie.Director"></label>
        <input class="col-6" asp-for="@Model.MyMovie.Director">
        <span asp-validation-for="@Model.MyMovie.Director" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <label class="col-1" asp-for="@Model.MyMovie.ReleaseDate"></label>
        <input class="col-6" asp-for="@Model.MyMovie.ReleaseDate">
        <span asp-validation-for="@Model.MyMovie.ReleaseDate" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <label class="col-1" asp-for="@Model.MyMovie.Genre"></label>
        <input class="col-6" asp-for="@Model.MyMovie.Genre">
        <span asp-validation-for="@Model.MyMovie.Genre" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <label class="col-1" asp-for="@Model.MyMovie.Price"></label>
        <input class="col-6" asp-for="@Model.MyMovie.Price">
        <span asp-validation-for="@Model.MyMovie.Price" class="text-danger"></span>
    </div>
    <div class="row m-3">
        <input type="submit" value="Dodaj" class="offset-1 col-6 btn btn-primary">
    </div>
</form>
</body>
</html>