@page
@model cw6.Pages.SimpleForm
<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Prosty Formularz</title>
</head>
<body>
    <h1>Prosty Formularz</h1>
<form asp-page="SimpleForm" method="post">
    <input type="text" name="firstname" placeholder="Podaj imie"><br>
    <input type="number" name="age" placeholder="Podaj wiek"><br>
    <input type="submit" value="Wyślij">
</form>
@if (ViewData["method"] != null && ViewData["method"] == "POST") {
    <p>Witaj @Request.Form["FirstName"]</p>
    <p>Twój wiek: @Request.Form["Age"]</p>
}
</body>
</html>