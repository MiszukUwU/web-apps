@page
@model cw7.Pages.PrimeNumbersGenerator
<h1>Generator liczb pierwszych</h1>
<form action="" method="post">
    <input type="number" name="amount" id="amount">
    <label for="amount">Liczba liczb pierwszych</label>
    <button type="submit">Wygeneruj</button>
</form>
@if (Model.PrimeNumbersList != null)
{
    <table>
        @for (int i = 0; i < Model.PrimeNumbersList.Max()+1; i++) {
            if (Model.PrimeNumbersList.Contains(i)) {
                <td class="red">@i</td>
            } else {
                <td>@i</td>
            }
        }
    </table>
}
